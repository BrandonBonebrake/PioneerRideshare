<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.PioneerApplication"
            prefHeight="720.0" prefWidth="1280.0"
            styleClass="background-section">
    <Button fx:id="btnExit" text="Exit" prefHeight="100" prefWidth="150" styleClass="btn-exit" onAction="#buttonExitClicked"/>
    <Button fx:id="btnOffer" text="Ride Offer" prefHeight="300" prefWidth="350" translateX="250" translateY="150"  styleClass="btn-offer" onAction="#buttonOfferClicked"/>
    <Button fx:id="btnRequest" text="Ride Request" prefHeight="300" prefWidth="350" translateX="625" translateY="150"  styleClass="btn-offer" onAction="#buttonRequestClicked"/>
    <Button fx:id="btnViewRides" text="View Rides" prefHeight="150" prefWidth="725" translateX="250" translateY="500"  styleClass="btn-viewRide" onAction="#buttonViewRidesClicked"/>
    <Button fx:id="btnLoginSignup" text="Login/Signup" prefHeight="25" prefWidth="130" translateX="1150" translateY="0"  styleClass="btn-login" onAction="#buttonLoginSignupClicked"/>
</AnchorPane>
